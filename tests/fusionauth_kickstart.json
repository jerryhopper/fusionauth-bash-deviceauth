{
  "variables": {
    "apiKey": "#{ENV.FUSIONAUTH_API_KEY}",
    "adminPassword": "#{ENV.FUSIONAUTH_ADMIN_PASSWORD}",
    "secondTenantId": "#{UUID()}",
    "applicationId": "#{ENV.APPLICATION_ID}",
    "clientId": "#{ENV.CLIENT_ID}"
  },
  "apiKeys": [
    {
      "key": "#{apiKey}",
      "description":"Standard development API key"
    }
  ],
  "requests": [
    {
      "method": "POST",
      "url": "/api/tenant/#{secondTenantId}",
      "body": {
        "tenant": {
          "name": "DeviceAuth"
        }
      }
    },
    {
      "method": "POST",
      "url": "/api/application/#{applicationId}",
      "tenantId": "#{secondTenantId}",
      "body": {
        "application": {
          "name": "Pied Piper",
          "roles": [
            {
              "name": "dev"
            },
            {
              "name": "ceo"
            },
            {
              "name": "intern"
            }
          ],
          "oauthConfiguration": {
            "enabledGrants": [
              "device_code",
              "authorization_code",
              "refresh_token"
            ]
          },
          "deviceVerificationURL": "http://localhost:9111/oauth2/device?client_id=#{clientId}&tenantId=#{secondTenantId}"
        }
      }
    },
    {
      "method": "POST",
      "url": "/api/user/registration/00000000-0000-0000-0000-000000000001",
      "tenantId": "#{secondTenantId}",
      "body": {
        "user": {
          "birthDate": "1981-06-04",
          "email": "#{adminEmail}",
          "firstName": "Erlich",
          "lastName": "Bachman",
          "password": "#{password}",
          "data": {
            "Company": "PiedPiper",
            "PreviousCompany": "Aviato",
            "user_type": "iconclast"
          }
        },
        "registration": {
          "applicationId": "#{applicationId}",
          "roles": [
            "admin"
          ]
        }
      }
    },

  ]
}
